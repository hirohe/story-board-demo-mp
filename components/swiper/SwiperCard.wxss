/* components/swiper/SwiperCard.wxss */
.swiper-card:not(.moving) {
  transition: transform ease-out .3s;
}

.swiper-card.out.right:not(.moving) {
  transform: translateX(100vw);
}

.swiper-card.out.left:not(.moving) {
  transform: translateX(-100vw);
}

.swiper-card {
  width: 100%;
  border-radius: 4px;
  box-shadow: 2px 2px 10px #222;
}