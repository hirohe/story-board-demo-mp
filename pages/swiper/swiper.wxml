<view
  class="swiper"
  bindtouchstart="onTouchStart"
  bindtouchmove="onTouchMove"
  bindtouchend="onTouchEnd"
>

  <view class="swiper-music-icon" bindtap="triggerBackgroundMusic">
    <image hidden="{{backgroundMusicPlaying}}" src="../../images/iconfont/videoStop.png"></image>
    <image hidden="{{!backgroundMusicPlaying}}" src="../../images/iconfont/videoStart.gif"></image>
  </view>

  <sign-image-1 wx:if="{{currentComponentName === 'sign-image-1'}}" />
  <sign-image-2 wx:if="{{currentComponentName === 'sign-image-2'}}" />
  <dress-show-1 wx:if="{{currentComponentName === 'dress-show-1'}}" />

</view>