/* pages/end/end.wxss */
.end {
  display: flex;
  justify-content: center;
  justify-items: center;
  flex-direction: column;

  height: 100vh;
  width: 100vw;
  background-color: #000;
  color: white;
}
.end-title {
  flex: 1;
}
.end-title-top, .end-title-bottom {
  font-size: 2.5rem;
  text-align: center;
}
.end-title-bottom {
   font-size: 1.5rem;
}
.bottom-box {
  flex: 4;
  width: 100%;
  overflow-y: hidden;
}
.remove-font {
   width: 100%;
   height: 100%;
   overflow: auto;
}
.remove-font-title {
  margin: 40rpx 0 80rpx 0;
  text-align: center;
  font-size: 20rpx;
}
.role-item {
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.name {
  font-size: 16rpx;
}
.remove-font-bottom {
  text-align: center;
  margin-top: 60rpx;
  font-size: 14rpx;
}