/* pages/end/end.wxss */
.end {
  display: flex;
  justify-content: center;
  justify-items: center;
  flex-direction: column;

  height: 100vh;
  width: 100vw;
  background-color: #000;
  color: white;
}
.end-title {
  flex: 1;
}
.end-title-top, .end-title-bottom {
  font-size: 2.5rem;
  text-align: center;
}
.end-title-bottom {
   font-size: 1.5rem;
}
.bottom-box {
  flex: 4;
  width: 100%;
  overflow-y: hidden;
}
.remove-font {
   animation:moveFont 8s linear 1s;
   -webkit-animation:moveFont 8s linear 1s;
   -moz-animation:moveFont 8s linear 1s;
   -o-animation:moveFont 8s linear 1s;
   width: 100%;
   height: 100%;
   overflow: auto;
}
.remove-font-title {
  margin: 40rpx 0 80rpx 0;
  text-align: center;
  font-size: 20rpx;
}
.role-item {
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.name {
  font-size: 16rpx;
}
.remove-font-bottom {
  text-align: center;
  margin-top: 60rpx;
  font-size: 14rpx;
}

@keyframes moveFont{
   0%  {margin-top: 0rpx;}
   5%  {background: -45rpx;}
   10% {background: -90rpx;}
   15% {background: -135rpx;}
   20% {background: -180rpx;}
   25% {background: -225rpx;}
   30% {background: -270rpx;}
   35% {background: -315rpx;}
   40% {background: -360rpx;}
   45% {background: -405rpx;}
   50% {background: -450rpx;}
   55% {background: -495rpx;}
   60% {background: -540rpx;}
   65% {background: -585rpx;}
   70% {background: -630rpx;}
   75% {background: -675rpx;}
   80% {background: -720rpx;}
   85% {background: -765rpx;}
   90% {background: -810rpx;}
   95% {background: -855rpx;}
   100% {margin-top: -900rpx}
 }