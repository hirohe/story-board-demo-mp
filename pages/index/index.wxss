/**index.wxss**/
.container {
  position: relative;
  background-color: #000;
  overflow: hidden;
}

.welcome {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  margin-top: 200rpx;
}

.index {
  background: url('http://pjpgeagds.bkt.clouddn.com/1@3x.png');
  background-repeat: no-repeat;
  background-size: 100%;
  background-attachment:fixed;
  background-position: 0 -92px;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.index-share {
  height: 100rpx;
  opacity: .5;
  margin: 20rpx 0 0 620rpx;
}
.index-name {
  width: 100%;
  text-align: center;
  margin-top: 616rpx;
}
.index-play {
  margin: -165rpx auto;
  width: 100rpx;
  height: 100rpx;
  opacity: .3;
  border-radius: 50%;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index-play image {
  width: 90rpx;
  height: 90rpx;
}
.index-btn {
  margin: -160rpx auto;
  width: 100%;
  text-align: center;
}
.index-btn button{
  width: 60%;
  color: white !important;
  border: 1rpx solid white !important;
  border-radius: 0;
}